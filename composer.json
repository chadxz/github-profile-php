{
    "name": "chadxz/github-profile-php",
    "description": "PHP example of rendering github profile data",
    "type": "project",
    "license": "MIT",
    "require": {
        "ext-json": "*",
        "slim/slim": "^3.12",
        "vlucas/phpdotenv": "^3.3",
        "bryanjhv/slim-session": "^3.6",
        "guzzlehttp/guzzle": "^6.3",
        "slim/flash": "^0.4.0",
        "slim/twig-view": "^2.4",
        "kanellov/slim-twig-flash": "^0.2.0",
        "monolog/monolog": "^1.24"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.11.3",
        "phpstan/phpstan-strict-rules": "^0.11.0",
        "friendsofphp/php-cs-fixer": "^2.14",
        "phpunit/phpunit": "^8.0",
        "mockery/mockery": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "test/"
        }
    },
    "scripts": {
        "phpstan": "phpstan analyse src",
        "csfix": "php-cs-fixer fix --dry-run --diff",
        "test": "composer lint && phpunit",
        "lint": "composer phpstan && composer csfix",
        "cover":"phpunit --coverage-html coverage/",
        "ci": "composer lint && phpunit --coverage-clover coverage/coverage.xml"
    }
}
